<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ActivityMenu">

    <ViewFlipper
        android:id="@+id/slider"
        android:layout_width="331dp"
        android:layout_height="282dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/DesaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DesaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FA734A"
        android:text="Desarrollo personal y social "
        android:textColorLink="#FF5722"
        app:layout_constraintBottom_toTopOf="@+id/ComuBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:rippleColor="#FF5722" />

    <Button
        android:id="@+id/ComuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#FFEB3B"
        android:text="Comunicación integral "
        app:layout_constraintBottom_toTopOf="@+id/InterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DesaBtn" />

    <Button
        android:id="@+id/InterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:backgroundTint="#36AB3A"
        android:text="Interacción y comprensión del entorno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ComuBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>